//lcd-re kiírjuk a joystick x és y értékét
#include <LiquidCrystal_I2C.h> //I2C könyvtár előhívása
#include <Wire.h> //kisegítő könyvtár
LiquidCrystal_I2C lcd(0x27,20,4); //előhívjuk azz lcd-t lcd néven (így hivatkozunk rá később)

void setup(){
  lcd.init(); //előkészítjük kijelzőnket
  lcd.backlight();  //háttérvilágítást bekapcsoljuk
  lcd.clear(); //töröljük a kijelzőt és a bal felső sarokba helyezzük a kurzort
  lcd.print("test"); //kiírjuk "test" a kijelzőre
  pinMode(A0,INPUT); //analóg 0 láb olvasása (joystick Y)
  pinMode(A1,INPUT);  //analóg 1 láb beállítása  (joystick X)
}
void loop(){
  lcd.clear(); //tisztítjuk a kijelzőt
  lcd.print("X: "); //kiírjuk "X: " a kijelzőre
  lcd.print(analogRead(A1)); //egyből utánna jön a joystick x értéke (analóg 0 olvasása
  lcd.print(" Y:"); //kiírjuk "X: " a kijelzőre
  lcd.print(analogRead(A0)); //egyből utánna jön a joystick x értéke (analóg 0 olvasása
  delay(200); //várunk 0.2 másodpercet (200 milisec)
}
